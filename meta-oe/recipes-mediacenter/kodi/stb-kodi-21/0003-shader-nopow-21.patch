   rgb.a = m_alpha;
 
 #if defined(XBMC_COL_CONVERSION)
-  rgb.rgb = pow(max(vec3(0), rgb.rgb), vec3(m_gammaSrc));
+  vec4 tmp;
+  vec4 tmp2;
+  tmp.rgb = max(vec3(0), rgb.rgb);
+  float a = 0.1854;
+  float b = 0.8516;
+  float c = -0.0357;
+  float ai = 0.06981272;
+  float bi = -0.2543179;
+  float ci = 1.18681715;
