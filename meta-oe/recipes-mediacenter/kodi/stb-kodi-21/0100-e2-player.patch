+    return false;
+  }
+
+  char line[1024];
+  while (fgets(line, sizeof(line), f) != NULL)
+  {
+    handleAppLinuxOutput(line);
+  }
+  int ret = pclose(f);
+
+  if (ret != 0)
+  {
+    CLog::Log(LOGINFO, "{}: Failure: {}", __FUNCTION__, ret);
+  }
+
+  return (ret == 0);
+}
