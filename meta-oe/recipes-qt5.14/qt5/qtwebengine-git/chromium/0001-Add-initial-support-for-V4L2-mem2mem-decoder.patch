   if (decode_nalus_)
     codec_context_->flags2 |= AV_CODEC_FLAG2_CHUNKS;
 
-  AVCodec* codec = avcodec_find_decoder(codec_context_->codec_id);
+  AVCodec* codec = NULL;
+  if (codec_context_->codec_id == AV_CODEC_ID_H264)
