+  else if (codec_context_->codec_id == AV_CODEC_ID_HEVC)
+    codec = avcodec_find_decoder_by_name("hevc_v4l2m2m");
+  if (codec) {
+    decoder_v4l2m2m_ = true;
+    decoder_v4l2m2m_sync_delay_ = 300 * 1000; // TODO option
