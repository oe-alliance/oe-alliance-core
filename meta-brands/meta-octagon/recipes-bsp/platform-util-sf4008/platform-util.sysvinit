#!/bin/sh

case "$1" in
  start)
    echo -n "Starting  platform-util"
    start-stop-daemon --start --quiet --exec /usr/bin/nxserver --
    while [ ! -c /dev/fb0 ]; do
        usleep 100000
    done
    
    usleep 200000
    
    echo "."
    ;;
  stop)
    ;;
  restart)
    ;;
  *)
    echo "Usage: /etc/init.d/platform-util {start|stop|restart}"
    exit 1
esac

exit 0
